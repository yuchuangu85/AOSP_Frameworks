cc_fuzz {
    name: "inputflinger_latencytracker_fuzzer",
    defaults: [
        "inputflinger_defaults",
    ],
    include_dirs: [
        "frameworks/native/services/inputflinger",
    ],
    shared_libs: [
        "libbase",
        "libbinder",
        "liblog",
        "libutils",
        "libinput",
        "libinputflinger",
    ],
    srcs: [
        "LatencyTrackerFuzzer.cpp",
    ],
    fuzz_config: {
        cc: ["android-framework-input@google.com"],
    },
}

